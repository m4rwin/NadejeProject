<Window x:Class="Nadeje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nadeje"
        mc:Ignorable="d"
        Title="Hlavní Formulář" Height="350" Width="525">
    
    <DockPanel Name="DockPanel1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Menu DockPanel.Dock="Top" Height="Auto">
            <MenuItem Header="_Soubor">
                <MenuItem Header="_Konec"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Akce">
                <MenuItem Header="_Vložit klienta"></MenuItem>
                <MenuItem Header="_Editovat klienta"></MenuItem>
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Name="btnTest"></Button>
            </ToolBar>
        </ToolBarTray>

        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock>Status operace</TextBlock>
        </StatusBar>
        
    </DockPanel>
</Window>
